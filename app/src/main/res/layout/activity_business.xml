<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewlocker1.bizme.BusinessActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/imageViewCompany"
        android:layout_below="@+id/textViewCompanyName"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:text="Mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewCompanyName"
        android:layout_toStartOf="@+id/textViewCompanyName"
        android:id="@+id/buttonMission" />

    <Button
        android:text="Redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonMission"
        android:layout_toRightOf="@+id/textViewCompanyName"
        android:layout_toEndOf="@+id/textViewCompanyName"
        android:id="@+id/buttonRedeem" />

    <TextView
        android:text="Good Time Charley's"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCompanyName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Business Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewDistance"
        android:layout_alignStart="@+id/buttonRedeem"
        android:id="@+id/textViewAddress" />

    <TextView
        android:text="Distance from Business:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textViewDistance"
        android:layout_below="@+id/imageViewCompany"
        android:layout_alignStart="@+id/buttonMission" />

</RelativeLayout>
