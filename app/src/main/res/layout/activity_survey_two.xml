<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_survey_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewlocker1.bizme.SurveyTwoActivity">

    <TextView
        android:text="Charley's Survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewHeader"
        android:textSize="40sp" />

    <TextView
        android:text="Question 1: Have you been to Trivia on Wednesdays?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewQuestion1"
        android:layout_below="@+id/textViewHeader"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion1"
        android:layout_alignStart="@+id/textViewQuestion1"
        android:layout_marginTop="12dp"
        android:id="@+id/radioGroup1">

        <RadioButton
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonYes"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonNo"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Question 2: What is your favorite drink at Charleys?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/radioGroup1"
        android:id="@+id/textViewQuestion2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="My favorite drink is "
        android:ems="10"
        android:layout_below="@+id/textViewQuestion2"
        android:layout_alignStart="@+id/radioGroup1"
        android:id="@+id/editTextAnswer" />

    <TextView
        android:text="Question 3: Should Karaoke be on Tuesdays or Sundays?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAnswer"
        android:layout_alignStart="@+id/radioGroup1"
        android:layout_marginTop="25dp"
        android:id="@+id/textViewQuestion3" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion3"
        android:layout_alignStart="@+id/radioGroup1"
        android:layout_marginTop="13dp"
        android:id="@+id/RadioGroup2">

        <RadioButton
            android:text="Tuesdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonTuesday"
            android:layout_weight="1" />

        <RadioButton
            android:text="Sundays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonSunday"
            android:layout_weight="1" />

    </RadioGroup>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editTextAnswer"
        android:id="@+id/buttonSubmit" />

</RelativeLayout>
