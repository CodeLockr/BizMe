<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_biz_survey_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewlocker1.bizme.BizSurveyViewActivity">

    <TextView
        android:text="View Survey Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewHeader" />

    <TextView
        android:text="Question 1: What is your favorite room in Charleys?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWelcome"
        android:layout_alignStart="@+id/textViewWelcome"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Question 2: What is your favorite drink in Charleys?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="133dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Question 3: How often do you go to Trivia on Wednesdays?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="119dp"
        android:id="@+id/textView6" />

    <RadioButton
        android:text="Bar Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton1"
        android:layout_alignStart="@+id/radioButton1"
        android:id="@+id/radioButton2" />

    <RadioButton
        android:text="Patio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2"
        android:id="@+id/radioButton3" />

    <RadioButton
        android:text="Shooters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton5"
        android:layout_alignStart="@+id/radioButton5"
        android:id="@+id/radioButton6" />

    <RadioButton
        android:text="Never"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/radioButton6"
        android:id="@+id/radioButton7" />

    <RadioButton
        android:text="All the time!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton8"
        android:id="@+id/radioButton9"
        android:layout_below="@+id/radioButton7"
        android:layout_marginTop="30dp" />

    <RadioButton
        android:text="Fishbowl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <RadioButton
        android:text="Once or Twice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton8"
        android:layout_below="@+id/radioButton7"
        android:layout_alignStart="@+id/radioButton7" />

    <RadioButton
        android:text="Main Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton1"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <RadioButton
        android:text="Draft Beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton1"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewAnswer1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewAnswer2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton3"
        android:layout_alignEnd="@+id/textViewAnswer2"
        android:id="@+id/textViewAnswer3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButton5"
        android:layout_alignStart="@+id/textViewAnswer3"
        android:id="@+id/textViewAnswer4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton5"
        android:layout_alignEnd="@+id/textViewAnswer4"
        android:id="@+id/textViewAnswer5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton6"
        android:layout_alignStart="@+id/textViewAnswer5"
        android:id="@+id/textViewAnswer6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButton8"
        android:layout_alignStart="@+id/textViewAnswer6"
        android:id="@+id/textViewAnswer7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton9"
        android:layout_alignStart="@+id/textViewAnswer7"
        android:id="@+id/textViewAnswer9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAnswer8"
        android:layout_alignBottom="@+id/radioButton8"
        android:layout_alignStart="@+id/textViewAnswer9" />

    <Button
        android:text="Update Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewAnswer9"
        android:layout_alignEnd="@+id/textViewWelcome"
        android:layout_marginEnd="10dp"
        android:id="@+id/buttonUpdate" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewAnswer1"
        android:layout_toEndOf="@+id/textViewAnswer8"
        android:id="@+id/textViewAnswers" />

</RelativeLayout>
