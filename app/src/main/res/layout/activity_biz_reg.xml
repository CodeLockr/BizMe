<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_biz_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewlocker1.bizme.BizRegActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:layout_below="@+id/textViewLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="24dp"
        android:id="@+id/editTextRegEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:layout_below="@+id/editTextRegUsername"
        android:layout_alignLeft="@+id/editTextRegUsername"
        android:layout_alignStart="@+id/editTextRegUsername"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextRegPassword" />

    <TextView
        android:text="LOGO AND WELCOME MESSAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/textViewLogo"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="10"
        android:id="@+id/editTextRegUsername"
        android:layout_below="@+id/editTextRegEmail"
        android:layout_alignLeft="@+id/editTextRegEmail"
        android:layout_alignStart="@+id/editTextRegEmail"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Log in!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGotoLogin"
        android:background="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Already have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAlready"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_alignBaseline="@+id/buttonGotoLogin"
        android:layout_alignBottom="@+id/buttonGotoLogin"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Terms and Conditions."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTerms"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textSize="10sp"
        android:textAlignment="textStart"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

    <TextView
        android:text="By signing up, you agree to our Terms and Privacy Policy."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTerms"
        android:layout_below="@+id/buttonSignup"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignup"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editTextRegPassword"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
